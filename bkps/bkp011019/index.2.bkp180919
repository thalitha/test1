                <br><br><br><br><br>
            </section>
        </div>
    </div>
    <!-- /.6th Page - Big Trends -->

     <!-- 7rd Page - Connect with us -->  
     <div class="container-wrapper background-container container-wrapper--connectwithus">
        <div class="container features-container content-container">
            <section class="features">
                <div class="row">
                    <div class="col-12 page-header">
                        <h2 class="text-capitalize" id="connectwithus">Connect with Us </h2>
